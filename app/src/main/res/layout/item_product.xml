<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:layout_margin="5dp"
        android:elevation="8dp"
        >
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_desconto"
                android:paddingTop="7dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:background="@drawable/circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="20%\n off"/>

            <ImageView
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:id="@+id/img_"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <ProgressBar
                android:layout_marginTop="20dp"
                android:id="@+id/progressbar_item"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="120dp" />

            <TextView
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_below="@+id/img_"
                android:id="@+id/tv_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOME DO PRODUTO"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="20sp"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_below="@+id/tv_name_product"
                android:text="@string/preco"
                android:id="@+id/tv_preco_tabela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:layout_below="@+id/tv_preco_tabela"
                android:text="@string/preco_"
                android:id="@+id/tv_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <TextView
                android:layout_centerInParent="true"
                android:text="@string/opcao_parcel"
                android:layout_below="@+id/tv_preco"
                android:id="@+id/tv_opcao_parcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>